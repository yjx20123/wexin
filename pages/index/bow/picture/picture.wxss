.container{
  width: 100%;
  height: 100vh;
  overflow: hidden;
  background-color: #fff7f7;
}
.choose {
  padding-top: 20rpx;
  padding-left: 30rpx;
  font-size: 30rpx;
  font-family: Verdana, Geneva, Tahoma, sans-serif;
}

.bow {
  width: 100%;
  height: 15vh;
  background-color: #bbded6;
  display: flex;
  text-align: center;
  border-top: 1rpx solid #fae3d9;
}

.bow-item {
  flex: 1;
  border-right: solid 1rpx #fae3d9;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.Meters {
  flex: 1;
  display: flex;
